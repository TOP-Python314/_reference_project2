@startuml

!theme monokai_npp from .styles
scale 1.2

interface dict

interface DictOfRanges {
    <font:Brass Mono><size:12>(int, int): Any
    --
    __init__()
    __getitem__()
}

class Kind {
    <font:Brass Mono><size:12>(int, int): MatureStage
    --
    +file_name: <i>str</i>
    +str_name: <i>str</i>
}

class MatureStage {
    +days: <i>int</i>
    +params: <i>dict</i> [Type[Parameter], Parameter]
}

class Creature {
    +kind: Kind
    #age: <i>int</i>
    +params: <i>dict</i> [Type[Parameter], Parameter]
    --<size:12>// getters  // --
    +age → <i>int</i>
    --<size:12>// setters  // --
    +age()
    --<size:12>// methods  // --
    -grow_up()
}

abstract Parameter {
    +{static}name: <i>str</i>
    #value: <i>float</i>
    --<size:12>// getters  // --
    +range → <i>tuple</i> [<i>float</i> , <i>float</i> ]
    +value → <i>float</i>
    --<size:12>// setters  // --
    +value()
    --<size:12>// methods  // --
    +{abstract}update()
}

class Health {
    +update()
}

class Satiety {
    +update()
}

class Emotion {
    +update()
}

hide abstract empty members
hide class empty members
hide interface empty members

left to right direction

dict <|- DictOfRanges

DictOfRanges <|- Kind

Kind o- MatureStage

MatureStage o-- Parameter

Creature o-up- Kind
Creature o- Parameter

Parameter <|-- Health
Parameter <|-- Satiety
Parameter <|-- Emotion

@enduml
